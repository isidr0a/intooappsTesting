<?xml version='1.0' encoding='utf-8'?>
<widget id="com.intooapps.loyalty" 
version="0.0.1" 
xmlns="http://www.w3.org/ns/widgets" 
xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Loyalty</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
	
	<gap:platform name="ios" />
	<gap:config-file platform="ios" parent="CFBundleVersion"><string>20160607</string></gap:config-file>
	
	<!-- Preferences -->
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="60000" />
	<preference name="KeepRunning" value="true"/>
 	<preference name="android-minSdkVersion" value="14" />
	<preference name="android-targetSdkVersion" value="19" />
	<!-- Define app icon for each platform. -->
	<platform name="android">
        <icon src="res/icon/android/icon-36.png" density="ldpi" />
        <icon src="res/icon/android/icon-48.png" density="mdpi" />
        <icon src="res/icon/android/icon-72.png" density="hdpi" />
		<icon src="res/icon/android/icon-96.png" density="xhdpi" />
     </platform>
	 <platform name="ios">
		<icon src="res/icon/ios/icon-29.png" width="29" height="29" />
		<icon src="res/icon/ios/icon-40.png" width="40" height="40" />
		<icon src="res/icon/ios/icon-58.png" width="58" height="58" />
		<icon src="res/icon/ios/icon-60.png" width="60" height="60" />
		<icon src="res/icon/ios/icon-72.png" width="72" height="72" />
		<icon src="res/icon/ios/icon-76.png" width="76" height="76" />
		<icon src="res/icon/ios/icon-80.png" width="80" height="80" />
		<icon src="res/icon/ios/icon-100.png" width="100" height="100" />
		<icon src="res/icon/ios/icon-114.png" width="114" height="114" />
		<icon src="res/icon/ios/icon-120.png" width="120" height="120" />
		<icon src="res/icon/ios/icon-144.png" width="144" height="144" />
		<icon src="res/icon/ios/icon-152.png" width="152" height="152" />
	</platform>
	<!-- Define app splash screen for each platform. -->
    <platform name="android">
    	<splash  src="res/screen/android/screen_320x426.png" 	density="port-ldpi" />
    	<splash  src="res/screen/android/screen_320x470.png" 	density="port-mdpi" />
    	<splash  src="res/screen/android/screen_480x640.png" 	density="port-hdpi" />
    	<splash  src="res/screen/android/screen_720x960.png"	density="port-xhdpi" />
    </platform> 
	<platform name="ios">
    	<splash  src="res/screen/ios/screen_320x480.png"   width="320"   height="480"/>
    	<splash  src="res/screen/ios/screen_640x960.png"   width="640"   height="960"/>
    	<splash  src="res/screen/ios/screen_768x1024.png"  width="768"   height="1024"/>
    	<splash  src="res/screen/ios/screen_1024x768.png"  width="1024"  height="768"/>
    	<splash  src="res/screen/ios/screen_640x1136.png"  width="640"   height="1136"/>
    	<splash  src="res/screen/ios/screen_960x640.png"   width="960"   height="640"/>
    	<splash  src="res/screen/ios/screen_1536x2008.png" width="1536"  height="2008"/>
    	<splash  src="res/screen/ios/screen_2048x1496.png" width="2048"  height="1496"/>
    	<splash  src="res/screen/ios/screen_750x1134.png"  width="750"   height="1134"/>
    	<splash  src="res/screen/ios/screen_1242x2208.png" width="1242"  height="2208"/>
    	<splash  src="res/screen/ios/screen_2208x1242.png" width="2208"  height="1242"/>
    	<splash  src="res/screen/ios/screen_1536x2048.png" width="1536"  height="2048"/>
    	<splash  src="res/screen/ios/screen_2048x1536.png" width="2048"  height="1536"/>
    	
    </platform>
	
	<platform name="ios">
		<preference name="KeyboardDisplayRequiresUserAction" value="false"/>
	</platform>
	
	<plugin name="cordova-plugin-compat" spec="1.0.0" />
	<plugin name="cordova-plugin-file" spec="3.0.0" source="pgb" />
	<plugin name="cordova-plugin-file-transfer" spec="1.3.0" source="pgb" />
	<plugin name="com.synconset.imagepicker" spec="1.0.4" source="pgb" />
	<plugin name="cordova-plugin-inappbrowser" spec="1.0.1" source="pgb" />
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-barcodescanner" />

	
    <content src="index.html" />
    <access origin="*" />
	
	<access origin="tel:*" launch-external="yes" />
	<access origin="mailto:*" launch-external="yes" />
	<access origin="sms:*" launch-external="yes" />
	<access origin="geo:*" launch-external="yes"/>
</widget>
